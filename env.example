# 应用配置
APP_NAME=School Cream
APP_VERSION=1.0.0
APP_ENV=production

# 模型配置
MODEL_PATH=./models
OUTPUT_PATH=./output
CONFIG_PATH=./config
LOG_PATH=./logs

# 检测配置
CONF_THRESHOLD=0.5
MAX_DET=100
UPDATE_INTERVAL=0.1
IOU_THRESHOLD=0.45

# 设备配置
CUDA_VISIBLE_DEVICES=0
GPU_MEMORY_FRACTION=0.8
CPU_THREADS=4

# 网络配置
API_HOST=0.0.0.0
API_PORT=8080
REGISTRY_URL=http://localhost:8080/api/courses
TIMEOUT=30
RETRY_COUNT=3

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_ROTATION=1 day
LOG_RETENTION=7 days

# 数据库配置（如果使用）
# DATABASE_URL=postgresql://user:password@localhost:5432/school_cream
# REDIS_URL=redis://localhost:6379/0

# 监控配置
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
METRICS_ENABLED=true

# 安全配置
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here
API_KEY=your-api-key-here

# 邮件配置（如果需要通知功能）
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-password
# SMTP_TLS=true

# 文件存储配置
MAX_FILE_SIZE=100MB
ALLOWED_EXTENSIONS=mp4,avi,mov,mkv
STORAGE_TYPE=local

# 性能配置
BATCH_SIZE=1
PREFETCH_FACTOR=2
WORKER_THREADS=4
QUEUE_SIZE=1000

# 调试配置
DEBUG=false
VERBOSE=false
PROFILING=false
